// Behavior

[name='slide']
  + div
    opacity 0
    visibility hidden
    transition all 500ms

  &:checked + div
    opacity 1
    visibility visible

// Basic Slide Styles

*
  box-sizing border-box
  margin 0
  padding 0

html,
body
  height 100%

body
  position relative

.slide
  pad = 60px
  position absolute
  top pad
  left pad * 2
  height "calc(100% - %s)" % (pad * 2)
  width "calc(100% - %s)" % (pad * 4)

  background-color white
  border 1px solid deeppink

// Visual Styles (safe to ignore)

html
  font-size 62.5%

body
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-size 16px
  font-weight 300
  background-image url('data:image/png;base64,')

h1,
h2,
p,
code
  line-height 1.5
  text-align center

h1
  font-size 3.5vw
  font-weight 300
  padding 1.0vw 0

h2, p
  color #999

h2, p, code
  font-size 4.0rem
  font-weight 500

  em
    font-weight 300

h1 + p
  margin-top 3.0rem

code, style
  font-family 'Anonymous Pro'

iframe
  height 100%
  width 100%

style[contenteditable]
  align-self center
  display: block;
  color: #333;
  font-size 2.5vw
  line-height 1.8
  padding: 20px;
  white-space: pre;
  height: 20%;
  width: 80%;
  text-align center

.slide
  display flex
  justify-content center
  flex-direction column
  padding 0 5px 5px

  background-color white
  border 1px solid hsl(0, 0%, 85%)
  border-radius 10px
  box-shadow 0 2px 5px hsl(0, 0%, 90%)

  &.title h1
    font-size 4.0vw
